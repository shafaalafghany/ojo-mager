<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <ImageView
                android:layout_width="370dp"
                android:layout_height="220dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/body_header_main"/>

            <TextView
                android:id="@+id/tv_title_body_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="35dp"
                android:text="@string/app_all_capital_name"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_bold" />

            <ImageView
                android:id="@+id/img_bell"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/bell_icon"
                android:layout_marginTop="40dp"
                android:layout_marginStart="330dp"
                android:layout_marginEnd="35dp" />

            <View
                android:layout_width="320dp"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_marginTop="83dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/week_goal"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginStart="40dp"
                android:layout_marginTop="90dp" />

            <TextView
                android:id="@+id/tv_workout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginTop="115dp"
                android:layout_marginEnd="110dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/workout"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginTop="145dp"
                android:layout_marginEnd="110dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/tv_kcal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginTop="115dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kcal"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginTop="145dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/tv_minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginTop="115dp"
                android:layout_marginStart="110dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/minutes"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginTop="145dp"
                android:layout_marginStart="110dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/tv_button_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weekly_goal_desc"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginTop="170dp"
                android:layout_gravity="center_horizontal" />

            <Button
                android:id="@+id/btn_set_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="190dp"
                android:text="@string/set_goal"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_label_challenge"
                android:textColor="#424350"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginTop="250dp"
                android:layout_marginStart="20dp"/>
            
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_first_label"
                android:layout_width="wrap_content"
                android:layout_height="370dp"
                android:orientation="vertical"
                android:layout_marginTop="280dp"
                android:layout_gravity="center_horizontal"
                tools:listitem="@layout/item_row_vertical" />

            <ImageView
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:background="@drawable/hot_label"
                android:layout_marginStart="15dp"
                android:layout_marginTop="550dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/second_label_challenge"
                android:textColor="#424350"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginStart="78dp"
                android:layout_marginTop="547dp" />

            <ImageButton
                android:id="@+id/img_btn_quarantine"
                android:layout_width="370dp"
                android:layout_height="120dp"
                android:background="@drawable/best_quarantine"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="590dp"/>

            <TextView
                android:id="@+id/tv_quarantine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/second_label_challenge"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/roboto_black"
                android:layout_marginStart="35dp"
                android:layout_marginTop="630dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/best_quarantine_desc"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/roboto_black"
                android:layout_marginStart="35dp"
                android:layout_marginTop="650dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/beginner"
                android:textColor="#424350"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginTop="720dp"
                android:layout_marginStart="20dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_second_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="750dp"
                android:layout_gravity="center_horizontal"
                tools:listitem="@layout/item_row_vertical_second" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/intermediate"
                android:textColor="#424350"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginTop="1405dp"
                android:layout_marginStart="20dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_third_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="1430dp"
                android:layout_gravity="center_horizontal"
                tools:listitem="@layout/item_row_vertical_second" />

        </FrameLayout>

    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start"
        android:fitsSystemWindows="true" />

</androidx.drawerlayout.widget.DrawerLayout>